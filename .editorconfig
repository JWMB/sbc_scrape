# https://docs.microsoft.com/en-us/visualstudio/ide/create-portable-custom-editor-options?view=vs-2017
# https://editorconfig.org/
# https://www.hanselman.com/blog/TabsVsSpacesAPeacefulResolutionWithEditorConfigInVisualStudioPlusNETExtensions.aspx

# Supported things in vs pro 2017
# - indent_style
# - indent_size
# - tab_width
# - end_of_line
# - charset
# - trim_trailing_whitespace
# - insert_final_newline
# - root

[*.cs]
end_of_line = crlf
indent_style = tab
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

[*.js]
end_of_line = crlf
indent_style = tab
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

[*.json]
end_of_line = crlf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

[*.config]
end_of_line = crlf
indent_style = tab
indent_size = 4
insert_final_newline = true

[*.scss]
end_of_line = crlf
indent_style = tab
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

[*.ps1, *.psm1]
end_of_line = crlf
indent_style = tab
indent_size = tab
tab_width = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.bash, *.sh]
end_of_line = lf
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.editorconfig]
insert_final_newline = true
trim_trailing_whitespace = true

[*.cmd, *.bat]
end_of_line = crlf
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true
